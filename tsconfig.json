{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "esnext.asynciterable"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "downlevelIteration": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "name": "async-seq",
    "readme": "none",
    "exclude": "**/*.spec.ts",
    "excludeNotExported": true
  }
}
